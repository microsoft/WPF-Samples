
<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:Class="ImageBrush.SampleViewer"
    Title="ImageBrush Sample"
    xmlns:examples="ImageBrush.UsingImageBrush">

  <DockPanel Background="White">
    <TabControl Background="White" BorderBrush="Orange">

      <TabItem Header="Painting with Images" >
        <Frame Source="PaintingWithImages.xaml" Background="White" />            
      </TabItem> 
      <TabItem Header="Alignments">
        <Frame Source="AlignmentExample.xaml" Background="White" />
      </TabItem> 
      <TabItem Header="Stretch Modes">
        <Frame Source="StretchModes.xaml" Background="White" />
      </TabItem>
      <TabItem Header="Tiling">
        <Frame Source="TilingExample.xaml" Background="White" />
      </TabItem>
      <TabItem Header="Tile Sizing">
        <Frame Source="TileSizeExample.xaml" Background="White" />
      </TabItem>
      <TabItem Header="Text Fills">
        <Frame Source="TextFillsExample.xaml" Background="White" />
      </TabItem>      
      <TabItem Header="Interactive Example">
        <Frame Source="InteractiveExample.xaml" Background="White" />
      </TabItem>
    </TabControl> 
  </DockPanel>
</Window>
