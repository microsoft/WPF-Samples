                ColorName="Window Text Color"
                ColorValue="#FFFFFF"
                Foreground="#2D3236"
                ShowSeparator="False" />
            <controls:ColorTile
                Grid.Row="1"
                Background="#2D3236"
                ColorBrushName="SystemColorWindowColor"
                TileRadius="0,0,0,8"
                ColorExplanation="Background of pages, panes, popups, and windows."
                ColorName="Window Color"
                ColorValue="#2D3236"
                Foreground="#FFFFFF"
                ShowSeparator="False" />

            <controls:ColorTile
                Grid.Column="1"
                Background="#212D3B"
                ColorBrushName="SystemColorHighlightTextColor"
