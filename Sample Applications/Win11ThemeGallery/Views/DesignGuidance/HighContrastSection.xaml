                ColorName="Highlight Color"
                ColorValue="#ABCFF2"
                Foreground="#212D3B"
                ShowSeparator="False" />

            <controls:ColorTile
                Grid.Column="2"
                Background="#B6F6F0"
                ColorBrushName="SystemColorButtonTextColor"
                ColorExplanation="Foreground color for buttons and any UI that can be interacted with."
                ColorName="Button Text Color"
                ColorValue="#B6F6F0"
                Foreground="#2D3236"
                ShowSeparator="False" />
            <controls:ColorTile
                Grid.Row="1"
                Grid.Column="2"
                Background="#2D3236"
                ColorBrushName="SystemColorButtonFaceColor"
                ColorExplanation="Background color for buttons and any UI that can be interacted with."
                ColorName="Button Face Color"
                ColorValue="#2D3236"
                Foreground="#B6F6F0"
                ShowSeparator="False" />

            <controls:ColorTile
                Grid.Column="3"
                Background="#70EBDE"
                ColorBrushName="SystemColorHotlightColor"
                ColorExplanation="Foreground / Text color for hyperlink text."
                ColorName="Hotlight Color"
                ColorValue="#70EBDE"
                TileRadius="0,8,0,0"
                Foreground="#202020"
                ShowSeparator="False" />
            <controls:ColorTile
                Grid.Row="1"
                Grid.Column="3"
                Background="#A6A6A6"
                ColorBrushName="SystemColorGreyTextColor"
                ColorExplanation="Foreground / Text color for Inactive (disabled) UI."
                TileRadius="0,0,8,0"
                ColorName="Grey Text Color / Disabled"
                ColorValue="#A6A6A6"
                Foreground="#FFFFFF"
                ShowSeparator="False" />
        </Grid>

        <!--  Night Sky  -->
        <TextBlock
            Margin="0,24,0,12"
            Style="{StaticResource SubtitleTextBlockStyle}"
            Text="Night Sky" />
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <controls:ColorTile
                Background="#FFFFFF"
                ColorBrushName="SystemColorWindowTextColor"
                ColorExplanation="Foreground / Text color for Headings, body copy, lists, placeholder text, app and window borders, any UI that can't be interacted with."
                TileRadius="8,0,0,0"
                ColorName="Window Text Color"
                ColorValue="#FFFFFF"
                Foreground="#000000"
                ShowSeparator="False" />
            <controls:ColorTile
                Grid.Row="1"
                Background="#000000"
                TileRadius="0,0,0,8"
                ColorBrushName="SystemColorWindowColor"
                ColorExplanation="Background of pages, panes, popups, and windows."
                ColorName="Window Color"
                ColorValue="#000000"
                Foreground="#FFFFFF"
                ShowSeparator="False" />

            <controls:ColorTile
                Grid.Column="1"
                Background="#2B2B2B"
                ColorBrushName="SystemColorHighlightTextColor"
                ColorExplanation="Foreground color for text or UI that is in selected, interacted with (hover, pressed), or in progress."
                ColorName="Highlight Text Color"
                ColorValue="#2B2B2B"
                Foreground="#D6B4FD"
                ShowSeparator="False" />
            <controls:ColorTile
                Grid.Row="1"
                Grid.Column="1"
                Background="#D6B4FD"
                ColorBrushName="SystemColorHighlightColor"
                ColorExplanation="Background or accent color for UI that is in selected, interacted with (hover, pressed), or in progress."
                ColorName="Highlight Color"
                ColorValue="#D6B4FD"
                Foreground="#2B2B2B"
                ShowSeparator="False" />

            <controls:ColorTile
                Grid.Column="2"
                Background="#FFEE32"
                ColorBrushName="SystemColorButtonTextColor"
                ColorExplanation="Foreground color for buttons and any UI that can be interacted with."
                ColorName="Button Text Color"
                ColorValue="#FFEE32"
                Foreground="#000000"
                ShowSeparator="False" />
            <controls:ColorTile
                Grid.Row="1"
                Grid.Column="2"
                Background="#000000"
                ColorBrushName="SystemColorButtonFaceColor"
                ColorExplanation="Background color for buttons and any UI that can be interacted with."
                ColorName="Button Face Color"
                ColorValue="#000000"
                Foreground="#FFEE32"
                ShowSeparator="False" />

            <controls:ColorTile
                Grid.Column="3"
                Background="#8080FF"
                ColorBrushName="SystemColorHotlightColor"
                ColorExplanation="Foreground / Text color for hyperlink text."
                ColorName="Hotlight Color"
                ColorValue="#8080FF"
                TileRadius="0,8,0,0"
                Foreground="#FFFFFF"
                ShowSeparator="False" />
            <controls:ColorTile
                Grid.Row="1"
                Grid.Column="3"
                Background="#A6A6A6"
                ColorBrushName="SystemColorGreyTextColor"
                TileRadius="0,0,8,0"
                ColorExplanation="Foreground / Text color for Inactive (disabled) UI."
                ColorName="Grey Text Color / Disabled"
                ColorValue="#A6A6A6"
                Foreground="#000000"
                ShowSeparator="False" />
        </Grid>
    </StackPanel>
</Page>
