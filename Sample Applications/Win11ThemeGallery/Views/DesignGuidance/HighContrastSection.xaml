                ColorName="Highlight Text Color"
                ColorValue="#212D3B"
                Foreground="#ABCFF2"
                ShowSeparator="False" />
            <controls:ColorTile
                Grid.Row="1"
                Grid.Column="1"
                Background="#ABCFF2"
